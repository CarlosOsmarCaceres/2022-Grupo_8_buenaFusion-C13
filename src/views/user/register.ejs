    <!-- Inicio Registro -->

    <div class="divForm_login">
      <a class="retornHome_login" href="/usuario">Regresar al Login</a>
      <form  class="form_login" id="form" action="registro" method="post" enctype="multipart/form-data"><!-- action="registro" method="post" enctype="multipart/form-data"   en action va la ruta -->
        <div class="subtituloRegistro">
            <h2>Registrarse</h2>
            <i class="fa-solid fa-key"></i>
  
        </div>
        <div class="subtitulo">
            <i class="fa-solid fa-user"></i>
            <h2>Datos personales</h2>
        </div>
        <div class="box-1_registro">
            <input class="input_register" type="text" name="nombre" id="nombre" placeholder="Ingresar nombre">
            <span  style="color: red;" class="error"  id="nombreErrors" ></span>
            <input class="input_register" type="text" name="apellido" id="apellido" placeholder="Ingresar apellido">
            <span  style="color: red;"  id="apellidoErrors"></span>
            <input class="input_register" type="date" name="fecha" id="fecha" placeholder="Seleccionar fecha">
            <input class="input_register" type="tel" name="telefono" id="telefono" placeholder="Ingrese su Telefono/Celular">
            <input class="input_register" type="email" name="email" id="email" placeholder="Correo electronico">
            <span style="color: red;" id="emailErrors"></span>
            <input class="input_register" type="password" name="pass" id="pass" placeholder="Escriba una contrase単a">  
            <span  style="color: red;"  id="passErrors"></span>
            <input class="input_register" type="password" name="pass2" id="pass2" placeholder="Reingresar su contrase単a">
            <span  style="color: red;" id="pass2Errors"></span>
          </div>
        <!-- avata -->
        <div class="box-2 mt-3">
          <div class="img-container" id="img-preview">
              
          </div>
          <input class="form-control mt-3" type="file" id="formFile">
          <span  style="color: red;"  id="imgErrors"></span>
      </div>
        <!-- <div class="form--group" id="img-preview">
          <h2>Avatar</h2>
        
    
          <input class="avatarRegister"type="file" name="avatar" id="formFile">
        </div>
        
         <div class="subtitulo_registro">
            <i class="fa-solid fa-lock"></i>
            <h2>Registrarse</h2>
        </div>  
        <div class="box-2_registro">
            <input class="input_register" type="password" name="datopass" id="datopass" placeholder="Ingresar contrase単a">  
            <input class="input_register" type="password" name="datorepass" id="datorepass" placeholder="Reingresar su contrase単a">
        </div>   -->
         <br>
        <div class="condiciones_registro">
            <div class="checkbox">
                <input class="checkbox-in" type="checkbox" name="pass1" id="promociones" >
                <label for="promociones">Quiero estar al tanto de nuevas promociones</label>
            </div>
            <div class="checkbox">
                <input class="checkbox-in" type="checkbox" name="pass1" id="terminos" >
                <label for="terminos">Aceptar terminos y condiciones</label>
            </div>
        </div>
        <div class="boton_registro"> 
            <button class="boton-boton" type="submit">Enviar</button>
            <span style="color: red;" id="submitErrors"></span>
            <button class="boton-boton" type="reset">Cancelar</button>
        </div>
        <div class="redes_registro">
            <button class="redes-boton" type="button">
              <a href="https://accounts.google.com/signin/v2/identifier?hl=en&passive=true&continue=https%3A%2F%2Fwww.google.com%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin" 
              class="fa-brands fa-google">
              <label class="redes-boton-2" for="google">Continuar con Google</label>
              </a>
            </button>
            <button class="redes-boton" type="button">
              <a href="https://www.facebook.com/"  class="fa-brands fa-facebook-square">
                <label class="redes-boton-2" for="facebook">Continuar con Facebook</label>
              </a>
            </button>
        </div>
      </form>
    </div>

    <!-- Fin Registro -->

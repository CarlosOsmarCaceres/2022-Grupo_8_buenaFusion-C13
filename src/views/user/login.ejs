<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head.ejs") %> 
  <body>
    <!-- Inicio Header -->
    <%-include("../partials/header.ejs") %>
    <!-- Fin Header -->
    <br>
    <!-- Inicio Login -->
    <a class="divForm_login" href="/usuario/registro">Registrate</a>
    <div class="divForm_login">
      <form class="form_login" id="form" action="/usuario" method="POST">
        <div class="portada">
          <i class="fa-solid fa-user fa-4x" id="fa-solid_login"></i>
          <h2>¡BIENVENIDO/A!</h2>
        </div>
        <!--  -->
        <div class="box-1_login">
          <label for="usuario">Usuario</label>
          <input class="input_login" type="email" name="email" id="email" placeholder="Email o Usuario" value="<%= locals.old && old.email ? old.email : "" %>">
          <span style="color: red;" id="emailErrors"></span>
          <% if (locals.errors && errors.email) { %>
            <small class="text-danger"><%= errors.email.msg %></small>
            <% } %>
          <label for="pass">Contraseña</label>
          <input class="input_login" type="password" name="pass" id="pass" placeholder="Ingresar contraseña">
          <span  style="color: red;"  id="passErrors"></span>
          <% if (locals.errors && errors.pass) { %>
            <small class="text-danger"><%= errors.pass.msg %></small>
            <% } %>
        </div>
        <!--  -->
        <div class="enviar_login">
          <button class="enviar_login-boton" type="submit">Ingresar</button>
          <span style="color: red;" id="submitErrors"></span>
        </div>
        <div class="form-check">
          <input class="form-check-input"  name="remember" type="checkbox" id="boton">
          <label class="form-check-label" for="boton">Recordarme</label>
        </div>
        <!--  -->
        <a class="recording_login" href="/registro">Olvidé contraseña</a>
        
        <!--  -->
        <div class="redes_login">
          <button class="redes-boton" type="button">
            <a href="https://accounts.google.com/signin/v2/identifier?hl=en&passive=true&continue=https%3A%2F%2Fwww.google.com%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin" class="fa-brands fa-google">
              <label class="redes-boton-2" for="google">Continuar con Google</label>
            </a>
          </button>
          <button class="redes-boton" type="button">
            <a href="https://www.facebook.com/"  class="fa-brands fa-facebook-square">
              <label class="redes-boton-2" for="facebook">Continuar con Facebook</label>
            </a>
          </button>
        </div>
      </form>
    </div>
    <!-- Fin Login -->
    <br>
    <!-- Inicio del Footer -->
    <%-include("../partials/footer.ejs")%>
    <!-- Fin del Footer -->
    <!-- Scripts -->
    <script src="https://kit.fontawesome.com/5f1547b5eb.js" crossorigin="anonymous"></script>
    <script src="/js/ValidacionesFront/loginValidatorFront.js"></script>
    <%-include("../partials/scripts.ejs")%>
  </body>
</html>